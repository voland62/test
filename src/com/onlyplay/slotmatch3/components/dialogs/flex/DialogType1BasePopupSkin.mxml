<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	alpha.disabled="0.5" minHeight="150" minWidth="150">

	<fx:Metadata>
		/** 
		 * @copy spark.skins.spark.ApplicationSkin#hostComponent
		 */
		[HostComponent("com.onlyplay.slotmatch3.components.dialogs.flex.GamePopup")]
	</fx:Metadata>

	<s:states>
		<s:State name="normal"/>
		<s:State name="inactive" stateGroups="inactiveGroup"/>
		<s:State name="disabled"/>
		<s:State name="normalWithControlBar" stateGroups="withControls"/>
		<s:State name="inactiveWithControlBar" stateGroups="withControls, inactiveGroup"/>
		<s:State name="disabledWithControlBar" stateGroups="withControls"/>
	</s:states>

	<fx:Script >
		<![CDATA[
			[Embed(source="D:/reps/slogmatch3_2/trunk/client/ios/puzzleslots/SlotMatch3/Resources/Dialogs/Common/bg_border1.png", mimeType="image/png"
			,scaleGridTop="45", scaleGridBottom="120", 
			scaleGridLeft="24", scaleGridRight="30"
			)]
			private static const CornerClass : Class;

		]]>
	</fx:Script>


	<fx:Declarations>
		<s:GlowFilter id="labelFilter" color="0" strength="3" blurX="4"
			blurY="4"/>
	</fx:Declarations>


	<s:BitmapImage id="bgImage" left="3" right="3" top="3" bottom="3"
		fillMode="repeat"/>
	<s:BitmapImage left="0" right="-12" top="-12" bottom="-3" source="{CornerClass}"/>


	<s:Group left="1" right="1" top="1" bottom="1">
		<s:layout>
			<s:VerticalLayout gap="0" horizontalAlign="justify"/>
		</s:layout>

		<s:Group>

			<s:Group id="titleGroup" left="0" right="0" top="-51">
				<s:BitmapImage id="titleBg" horizontalCenter="0"/>

				<s:Label id="titleDisplay" maxDisplayedLines="1"
					verticalCenter="16" minHeight="23"
					horizontalCenter="0" fontSize="20" color="0xfee5b8"
					filters="{[labelFilter]}" fontWeight="bold">
				</s:Label>
			</s:Group>

			<s:Group id="moveArea" left="0" right="0" top="0" bottom="0"/>

			<s:Button id="closeButton" skinClass="com.onlyplay.slotmatch3.components.dialogs.flex.els.CloseButtonSkin"
				right="-9" top="-9"/>
		</s:Group>


		<s:Group id="contentGroup" width="100%" height="100%"
			minWidth="0" minHeight="0">
		</s:Group>

	</s:Group>

	<s:Group id="bottomGroup" bottom="0" minWidth="0" minHeight="0"
		width="100%" includeIn="withControls">

		<s:Group id="controlBarGroup" left="0" right="0" top="1"
			bottom="1" minWidth="0" minHeight="0">

		</s:Group>
	</s:Group>

</s:Skin>