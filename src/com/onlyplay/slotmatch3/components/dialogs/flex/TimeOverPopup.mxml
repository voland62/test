<?xml version="1.0" encoding="utf-8"?>
<my:GamePopup xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:my="com.onlyplay.slotmatch3.components.dialogs.flex.*"
	xmlns:mx="library://ns.adobe.com/flex/mx" skinClass="com.onlyplay.slotmatch3.components.dialogs.flex.DialogType1BasePopupSkin"
	implements="com.onlyplay.slotmatch3.view.dialogs.ITimeOverPopup"
	minHeight="500" minWidth="400" title="Закончилось время!"
	controlBarVisible="true">



	<my:layout>
		<s:VerticalLayout paddingBottom="55" paddingLeft="40"
			paddingRight="40" paddingTop="20"/>
	</my:layout>

	<fx:Declarations>
		<s:GlowFilter id="outlineFilter" color="0" strength="3" blurX="4"
			blurY="4"/>
	</fx:Declarations>

	<my:states>
		<s:State name="normal"/>
		<s:State name="maxResult"/>
	</my:states>


	<!--<s:Rect width="100%" height="100%">
	<s:stroke>
	<s:SolidColorStroke color="#707070" weight="1"/>
	</s:stroke>
	</s:Rect>-->

	<fx:Script>
		<![CDATA[
			[Embed(source="/Dialogs/NoTimeDialog/no_time_normal_frame.png")]
			private const GlassSnowClass : Class;
			[Embed(source="/Dialogs/NoTimeDialog/no_time_max_frame.png")]
			private const MaxBgClass : Class;
			[Embed(source="/Dialogs/Common/buttons_base_w_green_orange.png")]
			private const ButtonsBg : Class;
//			[Embed(source="D:/reps/slogmatch3_2/trunk/client/ios/puzzleslots/SlotMatch3/Resources/Dialogs/Common/title2_base.png", mimeType="image/png")]
//			private var _TitleBgClass : Class;
			
			// buttons_base_w_green_orange.png

		]]>
	</fx:Script>

	<s:SkinnableContainer skinClass="com.onlyplay.slotmatch3.components.dialogs.flex.RounPanel3Skin"
		width="100%">

		<s:layout>
			<s:VerticalLayout horizontalAlign="center" gap="3"
				paddingTop="10"/>
		</s:layout>

		<s:Label text="Ваш выйгрыш:" color="0xffe05c" fontWeight="bold"
			fontSize="24"/>
		<s:HGroup verticalAlign="bottom">
			<my:CoinBitmapImage/>
			<s:Label text="120" fontWeight="bold" color="0xfdefb3"
				fontSize="28"/>
			<s:Label text="x2.0" fontWeight="bold" color="0x00ff00"
				fontSize="20"/>
			<s:Label text="=" fontWeight="bold" color="0xfdefb3"
				fontSize="24"/>
			<my:CoinBitmapImage/>
			<s:Label text="240" fontWeight="bold" color="0xffe36d"
				fontSize="30"/>




		</s:HGroup>

	</s:SkinnableContainer>


	<s:Label width="320" color="0x860202" textAlign="center" text="Он может быть ещё лучше!"
		text.maxResult="Вы достигли максимального результата!"
		fontSize="22" fontWeight="bold" height="30" height.maxResult="60"/>


	<my:NeildPanel width="100%" height="100%" excludeFrom="maxResult">


		<s:Group top="15" left="30">
			<s:VGroup horizontalAlign="center" x="20">
				<s:Label text="Бонусное время" fontWeight="bold"
					fontSize="14"/>
				<s:Label text="30 секунд!" color="0x860202" fontSize="20"
					fontWeight="bold"/>
			</s:VGroup>
			<s:VGroup x="150" horizontalAlign="center">
				<s:Label text="+Бонус" color="0x860202" fontSize="22"
					fontWeight="bold"/>
				<s:Label text='"Заморозка"!' color="0x860202"
					fontSize="18" fontWeight="bold"/>
			</s:VGroup>

			<s:Group y="50">
				<s:BitmapImage source="{GlassSnowClass} "/>
				<s:Label id="price" text="250 руб." x="50" y="122"
					fontWeight="bold" fontSize="16" color="0xFFFFFF"
					filters="{[outlineFilter]}"/>
				<s:Label id="koeff" text="x2.25" x="175" y="62"
					fontWeight="bold" fontSize="25" color="0xFFFFFF"
					filters="{[outlineFilter]}"/>
			</s:Group>

		</s:Group>
	</my:NeildPanel>


	<s:Group excludeFrom="normal" width="100%">
		<s:BitmapImage source="{MaxBgClass}" verticalCenter="0"
			horizontalCenter="0"/>

		<s:Label text="x5" verticalCenter="0" horizontalCenter="0"
			filters="{[outlineFilter]}" fontSize="100" fontWeight="bold"
			color="0xfdefb3"/>

	</s:Group>


	<my:controlBarContent>

		<s:Group bottom="-38" horizontalCenter="0">
			<s:BitmapImage source="{ButtonsBg}"/>
			<s:Button x="24" y="3" enabled.maxResult="false" label="Купить время"
				skinClass="com.onlyplay.slotmatch3.components.dialogs.flex.els.BigGrinButtonSkin"/>
			<s:Button x="210" y="14" label="В слот" skinClass="com.onlyplay.slotmatch3.components.dialogs.flex.els.YellowButtonSkin"/>
		</s:Group>

	</my:controlBarContent>



</my:GamePopup>
